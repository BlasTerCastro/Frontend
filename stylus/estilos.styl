@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
 text-decoration none

body
	font-size 16px
	font-family 'Varela Round', sans-serif

img 
	vertical-align top

ul 
	margin 0
	padding 0

.action
	color orange
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.actions 
	background rgba(0 0 0 0.3)
	bottom 0
	left 0
	position absolute
	right 0

.padding 
	padding 1em

.progress
	position relative
	margin 1em 0
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min 
		left 0
	.max
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		margin 0 auto
		border-radius 5px
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		 background gris_oscuro
		 height 10px
		 width 10px
		 border-radius 50%
		 position absolute
		 right 0
		 top -2px

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.border-bottom
	border-bottom 1px solid gris_claro

.right-text
	text-align right

.relative
	position relative

.container
	font-size 0
	padding 1.4rem
	text-align center

.menu
	display none

.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-heigth 3.5em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0px
	p
		margin .5em 0

figure
	margin 0px

.name 
	color gris_oscuro

.author 
	color gris_claro

.center-block
	margin 0 auto

.center-text
	text-align center

.relative
	position relative

.wrap
	width 1000px

.round
	border-radius 50%
	overflow hidden

.playing
	&.small
		width 20em

.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em

.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing 
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden

	.menu
		overflow hidden
		background gris_mas_claro
		display block
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
					-webkit-transition 0.5s

	.music	
		width 32.5em
		float left
	.playlist
		width 22em
		padding 0 2em
		border-left 1px solid gris_claro
		.list
			list-style none
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .5em